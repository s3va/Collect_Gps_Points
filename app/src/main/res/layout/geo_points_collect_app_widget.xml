<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.CollectGpsPoints.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.CollectGpsPoints.AppWidgetContainer">

    <TextView
        android:id="@+id/appwidget_text"

        style="@style/Widget.CollectGpsPoints.AppWidget.InnerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@id/imageButton"
        android:contentDescription="@string/appwidget_text"
        android:padding="0dp"
        android:scrollbars="vertical"
        android:text="@string/appwidget_text"
        android:textSize="14sp"
        android:textStyle="normal" />

    <ImageButton
        android:id="@+id/imageButton"
        style="@style/Widget.CollectGpsPoints.AppWidget.InnerView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/start_stop_service"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/photo" />
</RelativeLayout>
